<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    <ListPreference
        android:id="@+id/sortType"
        android:key="@string/pref_header_general"
        android:title="@string/pref_title_sort_order"
        android:entries="@array/pref_sort_order"
        android:entryValues="@array/pref_sort_order_value"
        android:defaultValue="@string/settings_default_popularity" />

</PreferenceScreen>
